<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/primary"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/contentToUploadPic"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:visibility="gone"/>
    <VideoView
        android:id="@+id/contentToUploadVid"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:visibility="gone"/>


        <EditText
            android:id="@+id/tagText"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Tag (Optional)"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:textColorHint="#FFFFFF"/>
    <Button
        android:id="@+id/ButtonPic"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Choose Picture"
        android:textColor="#FFFFFF"
        android:background="#000000" />
    <Button
        android:id="@+id/ButtonVid"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Choose Video"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonLocation"
        android:layout_gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Tag current location"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:background="#000000" />

    <Button
            android:id="@+id/ButtonUploadSubmitPic"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Upload Picture"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>
    <Button
        android:id="@+id/ButtonUploadSubmitVid"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Upload Video"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

        <!--<fragment-->
            <!--android:id="@+id/map"-->
            <!--class="com.google.android.gms.maps.SupportMapFragment"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"/>-->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

    </LinearLayout>

</ScrollView>